<UserControl x:Class="RED.Views.Modules.PowerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Style x:Key="EnableBtn" TargetType="Button" BasedOn="{StaticResource MetroButton}">
            <Setter Property="Content" Value="On" />
            <EventSetter Event="Click" Handler="EnableButton_Click" />
        </Style>
        <Style x:Key="DisableBtn" TargetType="Button" BasedOn="{StaticResource MetroButton}">
            <Setter Property="Content" Value="Off" />
            <EventSetter Event="Click" Handler="DisableButton_Click" />
        </Style>
        <Style x:Key="CurrentTelem" TargetType="Label">
            <Setter Property="ContentStringFormat" Value="{}{0:00.0} A" />
            <Setter Property="HorizontalContentAlignment" Value="Right" />
        </Style>
        <Style x:Key="VoltageTelem" TargetType="Label">
            <Setter Property="ContentStringFormat" Value="{}{0:00.0} V" />
            <Setter Property="HorizontalContentAlignment" Value="Right" />
        </Style>
        <Style x:Key="TemperatureTelem" TargetType="Label">
            <Setter Property="ContentStringFormat" Value="{}{0:0.0&#176;}" />
            <Setter Property="HorizontalContentAlignment" Value="Right" />
        </Style>
    </UserControl.Resources>
    <StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Row="0" Grid.Column="0" Style="{StaticResource EnableBtn}" Tag="0" />
            <Button Grid.Row="0" Grid.Column="1" Style="{StaticResource DisableBtn}" Tag="0" />
            <Label Grid.Row="0" Grid.Column="2">Motor 1</Label>
            <Label Grid.Row="0" Grid.Column="3" Style="{StaticResource CurrentTelem}" x:Name="Motor1Current" />
            <Button Grid.Row="1" Grid.Column="0" Style="{StaticResource EnableBtn}" Tag="1" />
            <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource DisableBtn}" Tag="1" />
            <Label Grid.Row="1" Grid.Column="2">Motor 2</Label>
            <Label Grid.Row="1" Grid.Column="3" Style="{StaticResource CurrentTelem}" x:Name="Motor2Current" />
            <Button Grid.Row="2" Grid.Column="0" Style="{StaticResource EnableBtn}" Tag="2" />
            <Button Grid.Row="2" Grid.Column="1" Style="{StaticResource DisableBtn}" Tag="2" />
            <Label Grid.Row="2" Grid.Column="2">Motor 3</Label>
            <Label Grid.Row="2" Grid.Column="3" Style="{StaticResource CurrentTelem}" x:Name="Motor3Current" />
            <Button Grid.Row="3" Grid.Column="0" Style="{StaticResource EnableBtn}" Tag="3" />
            <Button Grid.Row="3" Grid.Column="1" Style="{StaticResource DisableBtn}" Tag="3" />
            <Label Grid.Row="3" Grid.Column="2">Motor 4</Label>
            <Label Grid.Row="3" Grid.Column="3" Style="{StaticResource CurrentTelem}" x:Name="Motor4Current" />
            <Button Grid.Row="4" Grid.Column="0" Style="{StaticResource EnableBtn}" Tag="4" />
            <Button Grid.Row="4" Grid.Column="1" Style="{StaticResource DisableBtn}" Tag="4" />
            <Label Grid.Row="4" Grid.Column="2">Motor 5</Label>
            <Label Grid.Row="4" Grid.Column="3" Style="{StaticResource CurrentTelem}" x:Name="Motor5Current" />
            <Button Grid.Row="5" Grid.Column="0" Style="{StaticResource EnableBtn}" Tag="5" />
            <Button Grid.Row="5" Grid.Column="1" Style="{StaticResource DisableBtn}" Tag="5" />
            <Label Grid.Row="5" Grid.Column="2">Motor 6</Label>
            <Label Grid.Row="5" Grid.Column="3" Style="{StaticResource CurrentTelem}" x:Name="Motor6Current" />
            <Button Grid.Row="6" Grid.Column="0" Style="{StaticResource EnableBtn}" Tag="8" />
            <Button Grid.Row="6" Grid.Column="1" Style="{StaticResource DisableBtn}" Tag="8" />
            <Label Grid.Row="6" Grid.Column="2">Actuation</Label>
            <Label Grid.Row="6" Grid.Column="3" Style="{StaticResource CurrentTelem}" x:Name="ActuationCurrent" />
            <Button Grid.Row="7" Grid.Column="0" Style="{StaticResource EnableBtn}" Tag="9" />
            <Button Grid.Row="7" Grid.Column="1" Style="{StaticResource DisableBtn}" Tag="9" />
            <Label Grid.Row="7" Grid.Column="2">Logic</Label>
            <Label Grid.Row="7" Grid.Column="3" Style="{StaticResource CurrentTelem}" x:Name="LogicCurrent" />
            <Button Grid.Row="8" Grid.Column="0" Style="{StaticResource EnableBtn}" Tag="10" />
            <Button Grid.Row="8" Grid.Column="1" Style="{StaticResource DisableBtn}" Tag="10" />
            <Label Grid.Row="8" Grid.Column="2">Comms</Label>
            <Label Grid.Row="8" Grid.Column="3" Style="{StaticResource CurrentTelem}" x:Name="CommunicationsCurrent" />
            <Button Grid.Row="9" Grid.Column="0" cal:Message.Attach="FanControl('True')">On</Button>
            <Button Grid.Row="9" Grid.Column="1" cal:Message.Attach="FanControl('False')">Off</Button>
            <Label Grid.Row="9" Grid.Column="2">Fans</Label>
            <Button Grid.Row="10" Grid.Column="0" cal:Message.Attach="BuzzerControl('True')" Height="27" VerticalAlignment="Bottom">On</Button>
            <Button Grid.Row="10" Grid.Column="1" cal:Message.Attach="BuzzerControl('False')">Off</Button>
            <Label Grid.Row="10" Grid.Column="2">BMS Buzzer</Label>
            <Button Grid.Row="11" Grid.Column="0" cal:Message.Attach="AllMotorPower('True')" Height="27" VerticalAlignment="Bottom">On</Button>
            <Button Grid.Row="11" Grid.Column="1" cal:Message.Attach="AllMotorPower('False')">Off</Button>
            <Label Grid.Row="11" Grid.Column="2">All motors</Label>
            <Label Grid.Row="12" Grid.Column="2">Input Voltage</Label>
            <Label Grid.Row="12" Grid.Column="3" Style="{StaticResource VoltageTelem}" x:Name="InputVoltage" />
            <Label Grid.Row="13" Grid.Column="2">Total Pack Current</Label>
            <Label Grid.Row="13" Grid.Column="3" Style="{StaticResource CurrentTelem}" x:Name="TotalPackCurrent" />

            <Label Grid.Row="14" Grid.Column="2">BMS Temp 1</Label>
            <Label Grid.Row="14" Grid.Column="3" Style="{StaticResource TemperatureTelem}" x:Name="BMSTemperature1" />
            <Label Grid.Row="15" Grid.Column="2">BMS Temp 2</Label>
            <Label Grid.Row="15" Grid.Column="3" Style="{StaticResource TemperatureTelem}" x:Name="BMSTemperature2" />
        </Grid>
        <UniformGrid Rows="1">
            <Button Grid.Row="0" Grid.Column="0" Click="RebootButton_Click">Reboot</Button>
            <Button Grid.Row="0" Grid.Column="1" Click="ShutDownButton_Click">Shut Down</Button>
        </UniformGrid>
        <UniformGrid Rows="1">
            <Button x:Name="SaveFileStart">Start Log</Button>
            <Button x:Name="SaveFileStop">Stop Log</Button>
        </UniformGrid>
        <Expander Header="Other">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Row="0" Grid.Column="0" Style="{StaticResource EnableBtn}" Tag="6" />
                <Button Grid.Row="0" Grid.Column="1" Style="{StaticResource DisableBtn}" Tag="6" />
                <Label Grid.Row="0" Grid.Column="2">Motor 7</Label>
                <Label Grid.Row="0" Grid.Column="3" Style="{StaticResource CurrentTelem}" x:Name="Motor7Current" />
                <Button Grid.Row="1" Grid.Column="0" Style="{StaticResource EnableBtn}" Tag="7" />
                <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource DisableBtn}" Tag="7" />
                <Label Grid.Row="1" Grid.Column="2">Motor 8</Label>
                <Label Grid.Row="1" Grid.Column="3" Style="{StaticResource CurrentTelem}" x:Name="Motor8Current" />
                <Label Grid.Row="2" Grid.Column="2">Cell 1</Label>
                <Label Grid.Row="2" Grid.Column="3" Style="{StaticResource VoltageTelem}" x:Name="Cell1Voltage" />
                <Label Grid.Row="3" Grid.Column="2">Cell 2</Label>
                <Label Grid.Row="3" Grid.Column="3" Style="{StaticResource VoltageTelem}" x:Name="Cell2Voltage" />
                <Label Grid.Row="4" Grid.Column="2">Cell 3</Label>
                <Label Grid.Row="4" Grid.Column="3" Style="{StaticResource VoltageTelem}" x:Name="Cell3Voltage" />
                <Label Grid.Row="5" Grid.Column="2">Cell 4</Label>
                <Label Grid.Row="5" Grid.Column="3" Style="{StaticResource VoltageTelem}" x:Name="Cell4Voltage" />
                <Label Grid.Row="6" Grid.Column="2">Cell 5</Label>
                <Label Grid.Row="6" Grid.Column="3" Style="{StaticResource VoltageTelem}" x:Name="Cell5Voltage" />
                <Label Grid.Row="7" Grid.Column="2">Cell 6</Label>
                <Label Grid.Row="7" Grid.Column="3" Style="{StaticResource VoltageTelem}" x:Name="Cell6Voltage" />
                <Label Grid.Row="8" Grid.Column="2">Cell 7</Label>
                <Label Grid.Row="8" Grid.Column="3" Style="{StaticResource VoltageTelem}" x:Name="Cell7Voltage" />
                <Label Grid.Row="9" Grid.Column="2">Cell 8</Label>
                <Label Grid.Row="9" Grid.Column="3" Style="{StaticResource VoltageTelem}" x:Name="Cell8Voltage" />
                <Label Grid.Row="10" Grid.Column="2">Total Pack Voltage</Label>
                <Label Grid.Row="10" Grid.Column="3" Style="{StaticResource VoltageTelem}" x:Name="TotalPackVoltage" />
            </Grid>
        </Expander>
    </StackPanel>
</UserControl>
